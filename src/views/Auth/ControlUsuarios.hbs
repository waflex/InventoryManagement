<div class="container-fluid">
    <div class="row justify-content-md-cente">
        <div class="col col-lg-2"></div>
        <div class="col mt-5 text-center">
            <h2 class="mx-auto" style="color: #000000;
                text-shadow: 2px 2px 4px white; font-size: 50px;">
                Control de Usuarios
            </h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <form action="../Auth/ControlUsuarios/?p=1" method="post">
                <div class="card card-header border-0">
                    <a class="btn btn-primary btn-block" data-bs-toggle="collapse" href="#collapseExample" role="button"
                        aria-expanded="false" aria-controls="collapseExample">
                        Filtros<i class="bi bi-funnel-fill"></i>
                    </a>
                </div>
                <div class="collapse" id="collapseExample" data-aos="fade-down">
                    <div class="card card-body">
                        <span class="ms-2">Buscar Por RUT:</span>
                        <input class="form-control ms-2 mb-2" style="width: 90%;" type="text" name="N_Producto" id="">
                        <div class="form-group">
                            <span>Filtrar Institucion:</span>
                            <select class="custom-select form-control" id="Institucion" name="Institucion" required>
                                <option selected>Seleccione Institucion</option>
                                <option value="IPVC">IPVC</option>
                                <option value="UB">UB</option>
                                <option value="UAC">UAC</option>
                            </select>
                        </div>
                        <br>
                        <div class="form-group">
                            <span>Filtrar Cargo</span>
                            <select class="custom-select form-control" name="Tipo" id="Seccion" required>
                                <option selected>Seleccione Cargo</option>
                                <option value="Administrador">Administrador</option>
                                <option value="Auxiliar">Auxiliar</option>
                                <option value="Funcionario">Funcionario</option>
                            </select>
                            <br>
                        </div>
                        <button class="form-control btn btn-success mx-2 mb-2" style="width: 93%;"
                            type="submit">Buscar</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-10">
            {{#each data}}
            <div class="card mt-4 mx-5" data-aos="fade-up" data-aos-anchor-placement="top-bottom">
                <div class="card-header">
                    <h3 style="color: #2c1d1db1; text-shadow: 2px 2px 4px white;">Nombre Usuario: <p
                            style=" text-shadow: 2px 2px 4px white; color: black; text-transform: uppercase;">
                            {{Nom_usu}}</p>
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <p>RUT: {{ID}}</p>
                        </div>
                        <div class="col">
                            <p>Estado: {{Estado}}</p>
                        </div>
                        <div class="col">
                            <p>Cargo: {{Cargo}}</p>
                        </div>
                        <div class="col">
                            <p>Institucion: {{Institucion}}</p>
                        </div>
                        <div class="col">
                            <p>Ultima Conexion: {{timeago Lst_conn}}</p>
                        </div>
                    </div>
                    <div class="row mt-2 justify-content-end">
                        <div class="d-flex justify-content-end">
                            <!-- Example split danger button -->
                            <div class="btn-group dropup">
                                <a href="../Movimientos/{{ID}}" type="button" class="btn btn-info"> Ver Movimientos Usuario</a>
                                <button type="button" class="btn btn-info dropdown-toggle dropdown-toggle-split"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    <span class="visually-hidden">a</span>
                                </button>
                                <ul class="dropdown-menu" style="background-color: #e1dac8;">
                                    <li><a class="btn btn-info ms-auto dropdown-item"
                                            href="/CambiarContraseña/{{ID}}">Cambiar Contraseña
                                            <i class="bi bi-pencil-square" style="color: gray;"></i></a></li>
                                    <li><a class="btn btn-info ms-auto dropdown-item"
                                            href="/ModificarUsuario/{{ID}}">Modificar Usuario <i
                                                class="bi bi-pencil-square" style="color: gray;"></i></a></li>
                                    <li><a class="btn btn-danger ms-auto dropdown-item" href="">Eliminar Usuario <i
                                                class="bi bi-trash" style="color: red;"></i> </a></li>
                                    <li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
            <div class="pagination pagination-centered mt-5" data-aos="fade-up" data-aos-anchor-placement="top-bottom">
                <nav aria-label="Page navigation example" class="mx-auto">
                    <ul class="pagination">
                        {{#paginate pagination type="first"}}
                        <li {{#if disabled}}class="disabled page-item" {{/if}}><a class="page-link"
                                href="?p={{n}}">Inicio</a></li>
                        {{/paginate}}
                        {{#paginate pagination type="previous"}}
                        <li {{#if disabled}}class="disabled page-item" {{/if}}><a class="page-link" href="?p={{n}}"><i
                                    class="bi bi-arrow-left"></i></a></li>
                        {{/paginate}}
                        {{#paginate pagination type="next"}}
                        <li {{#if disabled}}class="disabled page-item" {{/if}}><a class="page-link" href="?p={{n}}"><i
                                    class="bi bi-arrow-right"></i></a></li>
                        {{/paginate}}
                        {{#paginate pagination type="last"}}
                        <li {{#if disabled}}class="disabled page-item" {{/if}}><a class="page-link"
                                href="?p={{n}}">Ultima</a></li>
                        {{/paginate}}
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
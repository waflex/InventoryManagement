{{>modal}}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-8">
                    <div class="container p-4">
                        <div class="table table-responsive">
                            <table class="table table-hover table-condensed table-stripped table-bordered">
                                <thead class="thead-dark">
                                    <tr style="background-color:#3647E8;color: aqua;">
                                        <th>Nombre Producto</th>
                                        <th>Stock Actual</th>
                                        <th>Stock Minimo</th>
                                        <th>Institucion</th>
                                        <th>Tipo</th>
                                        <th>Ubicaci√≥n</th>
                                        <th>Observacion</th>
                                        <th>Agregado/Modificado Por</th>
                                        <th>Agregado hace</th>
                                        <th>
                                            <p class="mx auto">Acciones</p>
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each result}}
                                    {{#if status}} {{!Si Valor es menor Rojo}}
                                    <tr class="bg-danger">
                                        <td>{{N_Producto}}</td>
                                        <td>{{Stock_Actual}}</td>
                                        <td>{{Stock_Minimo}}</td>
                                        <td>{{Institucion}}</td>
                                        <td>{{Tipo}}</td>
                                        <td>{{Ubicacion}}</td>
                                        <td>{{Observacion}}</td>
                                        <td>{{Func_Agrega}}</td>
                                        <td>{{timeago F_Agregado}}</td>
                                        <td><a href="Inventario/Modificar/{{Id_Producto}}"
                                                class="btn btn-primary">Modificar<ion-icon name="create-outline">
                                                </ion-icon></a></td>
                                        <Td><a id="{{N_Producto}}" rel="{{Id_Producto}}" href="javascript:void(0)"
                                                class="Borrar_P btn btn-danger">Eliminar<ion-icon name="trash-outline">
                                                </ion-icon></a></Td>

                                    </tr>
                                    {{else if StatusEq}} {{! Si Valor es igual Amarillo}}
                                    <tr class="bg-warning">
                                        <td>{{N_Producto}}</td>
                                        <td>{{Stock_Actual}}</td>
                                        <td>{{Stock_Minimo}}</td>
                                        <td>{{Institucion}}</td>
                                        <td>{{Tipo}}</td>
                                        <td>{{Ubicacion}}</td>
                                        <td>{{Observacion}}</td>
                                        <td>{{Func_Agrega}}</td>
                                        <td>{{timeago F_Agregado}}</td>
                                        <td><a href="Inventario/Modificar/{{Id_Producto}}"
                                                class="btn btn-primary">Modificar<ion-icon name="create-outline">
                                                </ion-icon></a></td>
                                        <Td><a id="{{N_Producto}}" rel="{{Id_Producto}}" href="javascript:void(0)"
                                                class="Borrar_P btn btn-danger">Eliminar<ion-icon name="trash-outline">
                                                </ion-icon></a></Td>
                                    </tr>
                                    {{else}}
                                    <tr style="color: black;">
                                        <td>{{N_Producto}}</td>
                                        <td>{{Stock_Actual}}</td>
                                        <td>{{Stock_Minimo}}</td>
                                        <td>{{Institucion}}</td>
                                        <td>{{Tipo}}</td>
                                        <td>{{Ubicacion}}</td>
                                        <td>{{Observacion}}</td>
                                        <td>{{Func_Agrega}}</td>
                                        <td>{{timeago F_Agregado}}</td>
                                        <td><a href="Inventario/Modificar/{{Id_Producto}}"
                                                class="btn btn-primary">Modificar<ion-icon name="create-outline">
                                                </ion-icon></a></td>
                                        <Td><a id="{{N_Producto}}" rel="{{Id_Producto}}" href="javascript:void(0)"
                                                class="Borrar_P btn btn-danger">Eliminar<ion-icon name="trash-outline">
                                                </ion-icon></a></Td>
                                    </tr>
                                    {{/if}}

                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
                <div class="col-md-2">
                </div>
            </div>
        </div>
    </div>
</div>
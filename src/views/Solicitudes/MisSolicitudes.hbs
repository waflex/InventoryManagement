<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-11">
                    <h3>Mis Solicitudes</h3>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-8">
                    {{#each solicitudes}}
                    <div class="card">
                        <div class="card-header">
                            <p>
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="row justify-content-md-center">
                                        <div class="col">
                                            <h4>ID Solicitud</h4>{{Id_Solicitud}}
                                        </div>
                                        <div class="col">
                                            <h4>Creado </h4>{{timeago F_Solicitud}}
                                        </div>
                                        <div class="col">
                                            <h4>Estado</h4>{{Estado}}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4"><a class="btn btn-primary mx-auto" data-bs-toggle="collapse"
                                        href="#collapseExample{{Id_Solicitud}}" role="button" aria-expanded="false"
                                        aria-controls="collapseExample">
                                        Ver Datos Solicitud
                                    </a></div>
                            </div>
                            </p>
                        </div>
                        <div class="card-body">
                            <div class="collapse" id="collapseExample{{Id_Solicitud}}">
                                <div class="card card-body">
                                    Productos Solicitados
                                    <br>
                                    <div class="row mt-2">
                                        {{#each PSolicitados}}
                                        <div class="col-md-6 my-auto">
                                            <strong class="strong">{{this.items.N_Producto}}</strong>
                                            <label for="strong">{{this.items.Tipo}}</label>
                                        </div>
                                        <div class="col-md-4"></div>
                                        <div class="col-md-2 my-auto">
                                            <span class="badge bg-info">{{this.qty}}</span>
                                        </div>
                                        {{/each}}
                                        <div class="col-md-8"></div>
                                        <div class="col-md-4 mt-4">
                                            <a class="btn btn-outline-info" href="../../Solicitudes/DetallesMiSolicitud/{{Id_Solicitud}}" type="submit">Ver Detalles</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br>
                    {{/each}}

                </div>
            </div>
        </div>
    </div>
</div>
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3 style="color: black;">Productos a Solicitar</h3>
                </div>
                {{#if productos}}
                <form action="EnviarSolicitud" method="post">
                    <div class="card-body">
                        <ul class="list-group">
                            {{#each elementos}}
                            <li class="list-group-item border-0 p-2">
                                <div class="row">
                                    <div class="col-md-2 my-auto">
                                        <span class="badge bg-info">{{this.qty}}</span>
                                    </div>
                                    <div class="col-md-6 my-auto">
                                        <strong class="strong">{{this.items.N_Producto}}</strong>
                                        <label for="strong">{{this.items.Tipo}}</label>
                                    </div>
                                    <div class="col-md-4 my-auto">
                                        <div class="btn-group">
                                            <button class="btn btn-primary btn-xs dropdown-toggle" type="button"
                                                data-bs-toggle="dropdown">Eliminar <span class="caret"></span></button>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item"
                                                        href="../../Solicitudes/Eliminar1/{{this.items.Id_Producto}}">Quitar
                                                        1</a></li>
                                                <li><a class="dropdown-item"
                                                        href="../../Solicitudes/EliminarProducto/{{this.items.Id_Producto}}">Eliminar
                                                        Todo</a></li>
                                            </ul>
                                        </div>
                                    </div>
                            </li>
                            {{/each}}
                        </ul>
                        <br>
                        <button type="submit" class="btn btn-success"> Solicitar Productos</button>
                    </div>
                </form>
            </div>
            {{else}}
            <div class="card-body">
                <h3>No se han agregado productos</h3>
            </div>
            {{/if}}
        </div>
    </div>
</div>
<div class="container">
    <div class="row mt-4">
        <div class="col-md-12">
            <h3 class="Text-center">Detalles Solicitud {{solicitudes.Id_Solicitud}}</h3>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="row">
                {{#if status2}}
                <div class="col-md-12 border border-1 border-danger rounded micard">
                    {{else}}
                    <div class="col-md-12 border border-2 rounded micard">
                        {{/if}}
                        <br>
                        <div class="row">
                            <form action="solicitudes/AprobarSolicitud/" method="post"></form>
                            <div class="col">
                                <h4>Solicitado por</h4>
                                <hr>
                            </div>
                            <div class="col">
                                <h4>Estado</h4>
                                <hr>
                            </div>
                            <div class="col">
                                <h4>Fecha</h4>
                                <hr>
                            </div>
                        </div>
                        <div class="row mt-1">
                            <div class="col">{{solicitudes.Id_Usuario}}</div>
                            <div class="col"> {{{solicitudes.Estado}}} </div>
                            <div class="col">{{solicitudes.F_Solicitud}}</div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-md-1"></div>
                            <div class="col">
                                <h4>Productos Solicitados</h4>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-1"></div>
                            <div class="col">Nombre producto</div>
                            <div class="col-md-3"></div>
                            <div class="col">Cantidad Solicitada</div>
                        </div>
                        <br>
                        <div class="row">
                            <form action="" method="post">
                                {{#each solicitudes.PSolicitados}}
                                <div class="row">
                                    <div class="col-md-1"></div>
                                    <div class="col"><label>{{this.items.N_Producto}}</label></div>
                                    <div class="col-md-5"><input type="hidden" name="IDp"
                                            value="{{this.items.Id_Producto}}" /></div>
                                    <div class="col"><label>{{this.qty}}</label></div>
                                </div>
                                {{/each}}
                                {{#if solicitudes.PrEntregados}}
                                <hr>
                                <div class="row mt-2">
                                    <form action="solicitudes/AprobarSolicitud/" method="post"></form>
                                    <div class="col mt-2">
                                        <h4>Entregado por</h4>
                                        <hr>
                                    </div>
                                    <div class="col mt-2">
                                        <h4>Fecha Entrega</h4>
                                        <hr>
                                    </div>
                                </div>
                                <div class="row mt-1">
                                    <div class="col">{{solicitudes.Id_Usuario_Entrega }}</div>
                                    <div class="col">{{solicitudes.F_Respuesta}}</div>
                                </div>
                                <div class="row">
                                    <div class="row mt-4">
                                        <div class="col-md-1"></div>
                                        <div class="col">
                                            <h4>Productos Entregados</h4>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-md-1"></div>
                                        <div class="col">Nombre producto</div>
                                        <div class="col-md-3"></div>
                                        <div class="col">Cantidad Entregada</div>
                                    </div>
                                    <br>
                                    <div class="row mt-3 mb-5">
                                        <form action="" method="post">
                                            {{#each solicitudes.PrEntregados}}
                                            <div class="row">
                                                <div class="col-md-1"></div>
                                                <div class="col"><label>{{this.items.N_Producto}}</label></div>
                                                <div class="col-md-5"><input type="hidden" name="IDp"
                                                        value="{{this.items.Id_Producto}}" /></div>

                                                <div class="col"><span style="width: 20%;"
                                                        class="ms-4">{{this.qty}}</span></div>
                                            </div>
                                            {{/each}}
                                    </div>
                                    {{/if}}
                                    <div class="row mt-4">
                                        <div class="col-md-2"></div>
                                        <div class="col mb-4">
                                            <div class="form-floating">
                                                <textarea class="form-control" placeholder="Leave a comment here"
                                                    name="Observacion" id="floatingTextarea2"
                                                    style="height: 100px;overflow:auto;resize:none"
                                                    disabled>{{solicitudes.Observacion}}</textarea>
                                                <label for="floatingTextarea2">Observaci√≥n en Solicitud</label>
                                            </div>
                                        </div>
                                        <div class="col-md-2"></div>
                                    </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>